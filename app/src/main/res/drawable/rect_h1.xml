<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/red_brown_dark" />
    <corners android:topRightRadius="5dp" android:radius="15dp" />

    <stroke
        android:width="1dp"
        android:color="@color/ash_daek"/>

    <padding
        android:left="2dp"
        android:right="2dp"
        android:top="1dp"
        android:bottom="1dp"/>

    <gradient
        android:startColor="#e0e0e0"
        android:endColor="#f4f4f4"
        android:useLevel="false"
        android:type="radial"
        android:gradientRadius="300"/>
</shape>