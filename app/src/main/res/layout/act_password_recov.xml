<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_rect13b"
    tools:context="com.ls.awajimatradeeder.PasswordRecovAct"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <include layout="@layout/tool_bar11f"/>
    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5.0dp"
        app:shape_arc_cropDirection="inside"
        app:shape_arc_height="15dp"
        app:shape_arc_position="bottom">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect6c"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:textStyle="bold"
                app:titleMarginStart="90dp"
                android:layout_marginEnd="1dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                app:title="Password Help Service"
                android:textAlignment="center"
                android:paddingBottom="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="1dp"
                app:titleTextColor="@color/purple_new"
                android:layout_height="100dp"/>

        </com.google.android.material.appbar.AppBarLayout>

    </com.github.florent37.shapeofview.shapes.ArcView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_bio0"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:hint="Surname"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:padding="30dp"
                        android:background="@drawable/rect6h"
                        android:id="@+id/surname3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:hint="Registered Phone Number"
                        android:textSize="15sp"
                        android:id="@+id/phoneNumber3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:padding="30dp"
                        android:background="@drawable/rect6h"
                        android:inputType="phone"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:text="Send Authentification Code"
                    android:paddingBottom="20dp"
                    android:paddingTop="21dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:id="@+id/send_ACode"
                    android:padding="30dp"
                    android:background="@drawable/shape_layer_3b"
                    android:textColor="@color/dark_and_red"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatButton>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_post_bio0"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="Password reset Code"
                    android:visibility="gone"
                    android:id="@+id/pass_code"
                    android:padding="30dp"
                    android:background="@drawable/rect6h"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:text="Confirm Code"
                    android:paddingBottom="20dp"
                    android:paddingTop="21dp"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:background="@drawable/shape_layer_3b"
                    android:textColor="@color/dark_and_red"
                    android:id="@+id/btn_proceed"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatButton>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:visibility="gone"
                android:id="@+id/layout_get_passwod"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shape_layer_3b"
                    android:textColor="@color/dark_and_red"
                    android:id="@+id/btn_get"
                    android:text="Get password"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:background="@drawable/shape_layer_3b"
                    android:textColor="@color/dark_and_red"
                    android:id="@+id/btn_create"
                    android:text="Create Password"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:id="@+id/layout_passwordIs"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:text="Your Password is:"
                    android:saveEnabled="true"
                    android:focusable="true"
                    android:textColorHighlight="@color/colorPrimary"
                    android:id="@+id/yourPassword"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_new_password_"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp"
                    android:background="@drawable/shape_rect_6"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:hint="New password"
                        android:textSize="20sp"
                        android:id="@+id/new_password_3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/shape_rect_6"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:hint="Re-enter the new password"
                        android:id="@+id/new_password_3_1"
                        android:textColorHint="@color/white"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:text="Create a new Password"
                    android:id="@+id/btn_change_password"
                    android:layout_marginBottom="12dp"
                    android:padding="20dp"
                    android:background="@drawable/shape_layer_3b"
                    android:textColor="@color/dark_and_red"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatButton>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/homeward"
                android:textColor="@color/dark_and_red"
                android:layout_marginTop="30dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/estate8"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</LinearLayout>