<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.SkylightApp3"
    android:background="@drawable/rect_white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollIndicators="left"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="40dp"
                android:layout_marginTop="35dp"
                android:id="@+id/image3"
                android:background="@drawable/rectg"
                android:src="@drawable/estate1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you looking for ways to make money? investment in the Int'l capital market has help many families  and businesses even through recession periods,with us,you are incharge of your Investments"
                android:layout_marginTop="10dp"
                android:background="@drawable/estate4"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_new"
                android:textSize="18sp"
                android:padding="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@null"
                android:textAlignment="center"
                android:textSize="15sp" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/estate7"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/switcher244"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center_horizontal"
                    android:text="@string/slide_2_desc"
                    android:background="@drawable/rect_white"
                    android:src="@drawable/estate3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:fontFamily="monospace"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_their4c"
                    android:foregroundGravity="center_horizontal"
                    android:text="Our Coop. Members would be able to access Loans,after their first 3 months"
                    android:textAlignment="center"
                    android:padding="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/switcher2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center_horizontal"
                    android:text="@string/slide_2_desc"
                    android:background="@drawable/rect_white"
                    android:src="@drawable/estate2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by Lumgwun Solutions Group."
                    android:gravity="bottom"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_rect14"
                    android:textColor="@android:color/white"
                    android:padding="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />




            </androidx.appcompat.widget.LinearLayoutCompat>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>