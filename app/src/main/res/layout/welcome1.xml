<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:scrollbarStyle="insideInset"
    android:background="@drawable/rect_their44">
    <include layout="@layout/tool_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:padding="40dp"
        android:layout_marginTop="35dp"
        android:id="@+id/image3"
        android:background="@drawable/rect6g"
        android:src="@drawable/estate1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:id="@+id/tv133"
        android:layout_marginBottom="30dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_below="@id/image3"
        android:id="@+id/linear3"
        android:background="@drawable/rect11"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_1_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/tv1"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/tv2"
            android:padding="20dp"
            android:background="@drawable/rect6h"
            android:paddingRight="10dp"
            android:text="@string/slide_1_desc"
            android:textAlignment="center"
            android:textColor="@android:color/holo_purple"
            android:textSize="20sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="40dp"
        android:id="@+id/above"
        android:layout_below="@id/linear3"
        android:background="@drawable/shape_rect_3"
        android:src="@drawable/estate6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by Lumgwun Solutions Group"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/above"
        android:background="@drawable/rect6h"
        android:textColor="@color/purple_new"
        android:padding="20dp"
        android:textStyle="italic" />


</RelativeLayout>