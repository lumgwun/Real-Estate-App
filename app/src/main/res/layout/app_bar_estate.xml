<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            style="@style/AppBarNew"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/estate_balance"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Estate Balance :N100,000,000"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar_super"
                android:layout_height="wrap_content"/>


            <FrameLayout
                android:id="@+id/frameContainer_super"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_height="match_parent"
                android:id="@+id/frameContainer_super2"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="300dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rect_their6"
                    android:layout_gravity="top">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/superGreetings"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/good_day"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:stateListAnimator="@animator/nav_default_pop_enter_anim"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffff"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_est"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/user1"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:stateListAnimator="@animator/nav_default_pop_enter_anim"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffff"/>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/super_name"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="2dp"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Estate Admin:"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/est_admin_id"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:layout_marginEnd="2dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="ID:094g76"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="2dp">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/acct2_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleColor="@color/blue1"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleOverlay="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:background="@drawable/shape_rect14c"
                                android:clickable="false">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/est_emerg_today"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Emergency: 5"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:padding="10dp"
                                    android:layout_marginEnd="2dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical|start"
                                    android:gravity="center_vertical|start"
                                    android:clickable="false"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/est_visitors_today"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:paddingLeft="10dp"
                                    android:text="Visitors Today: 35"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:padding="10dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical|end"
                                    android:gravity="center_vertical|end"
                                    android:clickable="false"
                                    />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="2dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/blue1"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="@drawable/shape_rect14c"
                            android:clickable="false">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/est_supplies_request"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Supplies Request: 24"
                                android:textColor="@color/colorPrimaryDark"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_vertical|start"
                                android:gravity="center_vertical|start"
                                android:clickable="false" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/est_prop_request"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Property Request: 50"
                                android:textColor="@color/colorPrimaryDark"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_vertical|start"
                                android:gravity="center_vertical|end"
                                android:clickable="false"
                                />

                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>

                </androidx.cardview.widget.CardView>


            </FrameLayout>


        </com.google.android.material.appbar.AppBarLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_layer_3b"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cus_BankText"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Bank Details :"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_BankN"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="Sterling Bank :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_BankNo33"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="0012897632 :"/>


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cus_BankBalance4444"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Naira 0.00 :"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <include layout="@layout/content_estate" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>