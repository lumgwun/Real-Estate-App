<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/flag_latvia"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/propCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">
        <TextView
            android:id="@+id/prop_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:text="For Sale"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="20sp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/item_l1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/prop_imageP"
                    android:src="@drawable/estate2"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="400dp"/>


                <TextView
                    android:id="@+id/prop_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Cubana Estate"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/property_Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="This is the estate of the Nobles"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/item_l3"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/item_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/property_locale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Port Harcourt"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/property_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.2"
                    android:paddingStart="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="5dp"
                    android:text="Rivers State,Nigeria"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/property_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:letterSpacing="0.2"
                    android:paddingStart="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="5dp"
                    android:text="N500K/Year"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>
